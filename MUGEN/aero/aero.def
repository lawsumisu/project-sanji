
; Player information
[Info]
name         = "Aero"   ; Name of character
displayname  = "Aero"  ; Name of character to display
versiondate  = 0.0           ; Version date of character (MM,DD,YYYY or X.XX)
mugenversion = 1.1           ; Version of M.U.G.E.N. character works on (X.XX)
author       = "Lawsumisu"   ; Character author name
pal.defaults = 1,2,3,4  ; Default palettes in order of preference (up to 4, starts from 1)
localcoord   = 320,240       ; Local coordinate space (width, height)

; Files for the player
[Files]
cmd      = aero.cmd          ; Command set
cns      = aero.cns          ; Constants
st       = aero.cns          ; States
stcommon = common1.cns       ; Common states (from data or motif)
sprite   = aero.sff          ; Sprite
anim     = aero.air          ; Animation
sound    = aero2.snd          ; Sound
ai       = aero.ai           ; AI hints data (not used)
pal1 	 = aero.act

; Maps character selection buttons to palette numbers.
[Palette Keymap]
x  = 1 ;Press button X to select palette 1, etc.
y  = 2
z  = 3
a  = 1
b  = 2
c  = 3
x2 = 4 ;Hold Start and press button X for palette 7, etc.
y2 = 5
z2 = 6
a2 = 4
b2 = 5
c2 = 6

; Arcade mode
[Arcade]
;intro.storyboard = intro.def
;ending.storyboard = ending.def
