[Statedef -2]

; This is where global variables can get reset 
[State -2, Set Variable 'ticks-per-beat']
type = VarSet
trigger1 = 1
v = 1
value = 8
persistent = 0

[State -2, Set Variable 'common-time']
type = VarSet
trigger1 = stateno >= 200 && stateno <= 250
trigger1 = Time = 1
trigger1 = Var(2) = 0
v = 2
value = Var(1) * 8

[State -2, Set Variable 'note-time']
type = VarSet
trigger1 = stateno >= 200 && stateno <= 250
trigger1 = Time = 1
v = 3
value = Var(3) % Var(1) + (Var(1) * Var(4))

[State -2, Add To Variable 'ticks-played']
type = VarAdd
trigger1 = stateno >= 200 && stateno <= 250
trigger1 = Time = 1
v = 5
value = Var(1) * Var(4)

[State -2, Reset Variable 'common-time']
type = VarSet
trigger1 = ctrl = 1
trigger1 = Var(3) <= -Var(1)
v = 2
value = 0

[State -2, Reset Variable 'note-time']
type = VarSet
trigger1 = ctrl = 1
trigger1 = Var(2) = 0
v = 3
value = 0

[State -2, Reset Variable 'ticks-played']
type = VarSet
trigger1 = ctrl = 1
trigger1 = Var(2) = 0
v = 5
value = 0

[State -2, Decrement Variable 'common-time']
type = VarAdd
trigger1 = Var(2) > 0
v = 2
value = -1

[State -2, Decrement Variable 'note-time']
type = VarAdd
trigger1 = Var(2) > 0 ; If in 'Common Time'
v = 3
value = -1

[State -2, Debug Log]
type = DisplayToClipboard
trigger1 = 1
text = "Ticks per Beat = %d, Beats per Note = %d, Ticks left in Common Time = %d, Note Time = %d, Ticks Played %d"
params = var(1), var(4), var(2), var(3), var(5)
ignorehitpause = 1